@model WebMasters.Usuarios

@{
    ViewBag.Title = "Signup";
}

<div class="borde_redondo margen login" style=" background-color: white;">
    <div class="espacios_laterales">
        <h1 style="align-content:center;">
            <div class="texto_alineado_centro" style="color:#404240;"> Registrate</div>
        </h1>
    </div>
    <div style="height:1em;">
        <hr style="color: #ffffff;" />
    </div>
    <div class="espacios_laterales">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <input class="form-control text-box single-line" id="Nombre" name="Nombre" type="text" value="" placeholder="Nombre">
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Apellidos" name="Apellidos" type="text" value="" placeholder="Apellidos">
                    @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" data-val="true" data-val-number="El campo Telefono debe ser un número." data-val-required="El campo Telefono es obligatorio." id="Telefono" name="Telefono" type="number" value="" placeholder="Teléfono">
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Email" name="Email" type="text" value="" placeholder="Email">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Contrasena" name="Contrasena" type="text" value="" placeholder="Contraseña">
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Descripcion" name="Descripcion" type="text" value="" placeholder="Descripción">
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Sexo" name="Sexo" type="text" value="" placeholder="Sexo">
                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" data-val="true" data-val-number="El campo Edad debe ser un número." data-val-required="El campo Edad es obligatorio." id="Edad" name="Edad" type="number" value="" placeholder="Edad">
                    @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Foto" name="Foto" type="text" value="" placeholder="Foto">
                    @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" id="Contacto" name="Contacto" type="text" value="" placeholder="Contacto">
                    @Html.ValidationMessageFor(model => model.Contacto, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input class="form-control text-box single-line" data-val="true" data-val-number="El campo Tipo debe ser un número." data-val-required="El campo Tipo es obligatorio." id="Tipo" name="Tipo" type="number" value="" placeholder="Tipo">
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }



        ¿No estás registrado? Haz clic  <a href="/Usuarios/Create" style="color:tomato">¡Aquí!</a>


    </div>

</div>


