
@{
    ViewBag.Title = "Find";
}

<div id="home" class="row">
    <div class="col-md-12 text-center">
        <h2>Búsqueda de Tours</h2>
        <hr />
        @using (Html.BeginForm("Find", "Tours", FormMethod.Post))
        {
            <form role="form">
                <div class="form-group" align="center">
                    <input type="text" name="ciudad" id="ciudad" placeholder="Ciudad" class="form-control text-box single-line">
                </div>
                <div class="form-group" align="center">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            </form>

        }

    </div>
</div>

